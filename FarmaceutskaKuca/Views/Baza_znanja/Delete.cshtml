@model FarmaceutskaKuca.Models.baza_znanja

@{
    ViewBag.Title = "Delete";
}

<h2>Izbriši</h2>

<h3>Da li ste sigurni da želite izbrisati ovaj unos?</h3>
<div>
    <h4>Baza znanja</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Naziv incidenta: ")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.naziv_incidenta)
        </dd>

        <dt>
            @Html.DisplayName("Rješenje: ")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.rjesenje)
        </dd>

        <dt>
            @Html.DisplayName("Kategorija: ")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.kategorija.naziv)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Izbriši" class="btn btn-default" /> |
            @Html.ActionLink("Nazad", "Index")
        </div>
    }
</div>
