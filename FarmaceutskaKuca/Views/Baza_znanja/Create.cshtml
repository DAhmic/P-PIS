@model FarmaceutskaKuca.Models.baza_znanja

@{
    ViewBag.Title = "Create";
}

<h2>Kreiraj</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Baza znanja</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.Label("Naziv incidenta", htmlAttributes: new { @class = "control-label col-md-2" })
            <!--(at)Html.LabelFor(model => model.naziv_incidenta, htmlAttributes: new { (at)class = "control-label col-md-2" }) -->
            <div class="col-md-10">
                @Html.EditorFor(model => model.naziv_incidenta, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.naziv_incidenta, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Rješenje", htmlAttributes: new { @class = "control-label col-md-2" })
            <!--(at)Html.LabelFor(model => model.rjesenje, htmlAttributes: new { (at)class = "control-label col-md-2" }) -->
            <div class="col-md-10">
                @Html.EditorFor(model => model.rjesenje, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.rjesenje, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Kategorija", htmlAttributes: new { @class = "control-label col-md-2" })
            <!--(at)Html.LabelFor(model => model.id_k, "id_k", htmlAttributes: new { (at)class = "control-label col-md-2" }) -->
            <div class="col-md-10">
                @Html.DropDownList("id_k", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.id_k, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Dodaj" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Nazad", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
