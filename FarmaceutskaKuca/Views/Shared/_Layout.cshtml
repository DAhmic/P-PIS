<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Farmaceutska kuća</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Farmaceutska kuća", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (Session["KorisnikIme"] as string == "Dina")
                    {
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    }
                    @if (Session["KorisnikIme"] as string == "Amina")
                    {
                        <li>@Html.ActionLink("Home", "IndexIM", "Home")</li>
                    }
                    @if (Session["KorisnikIme"] as string == "Ilma")
                    {
                        <li>@Html.ActionLink("Home", "IndexKM", "Home")</li>
                    }
                    @if (Session["KorisnikIme"] as string == "Azra")
                    {
                        <li>@Html.ActionLink("Home", "IndexITSCM", "Home")</li>
                    }
                    @if (Session["KorisnikIme"] as string == "Denis")
                    {
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    }
                    @if (Session["KorisnikIme"] as string == null || Session["KorisnikIme"] as string == null ||
                                                Session["KorisnikId"] as string == "" || Session["KorisnikIme"] as string == "")
                    {
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    }
                    <li>@Html.ActionLink("O nama", "About", "Home")</li>
                    <li>@Html.ActionLink("Kontakt", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Farmaceutska kuća - Tim 2</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
